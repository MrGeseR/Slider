body
  margin 0
  padding 0

img
  max-width 100%
  max-height 100%
  display block

.slider
  margin 0 auto
  position relative
  width 80%
  border 2px dotted greenyellow
  height 220px
  &__element
    display block
    float left
    padding 10px 10px 10px 0
    width 31000px
    height 200px
  &__leftArrow
    display inline-block
    font-size 100px
    position absolute
    left 10 px
    opacity 0.8
    line-height 220px
    &:hover
      color red
  &__rightArrow
    display inline-block
    font-size 100px
    position absolute
    right 10 px
    opacity 0.8
    line-height 220px
    &:hover
      color red


.mainHeader
  text-align center